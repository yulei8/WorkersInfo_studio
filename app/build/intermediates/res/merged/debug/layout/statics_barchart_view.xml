<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:eleven="http://schemas.android.com/apk/res-auto"  
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
  
   

    <com.chinamobile.workerspace.ui.BounceScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/coversation_bg"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:scrollbarThumbVertical="@drawable/scrollbar_handle_vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="10.0dip"
            android:background="@drawable/shape_bg"
            android:paddingRight="10.0dip" >
     
            <LinearLayout
                android:id="@+id/personresume_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_strip_setting_bottom"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20.0dip"
                android:orientation="vertical">  
                
                <TextView
                    android:id="@+id/bar_statis_title1"
                    style="@style/B4_Font_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:text="于雷" />  
                <TextView
                    android:id="@+id/bar_statis_title2"
                    style="@style/B4_Font_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:linksClickable="true"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:text="kobe122333@sina.com" />
               
                
            </LinearLayout>

            <com.github.mikephil.charting.charts.BarChart
		         android:id="@+id/custom_barview"
		     	 android:layout_marginTop="40dp"
		     	 android:layout_marginBottom="20dp"
		         android:layout_width="fill_parent"
		         android:layout_height="fill_parent"
		         android:layout_above="@id/personresume_text"
		         android:layout_centerHorizontal="true"/>
            
        </RelativeLayout>
    </com.chinamobile.workerspace.ui.BounceScrollView>

</LinearLayout>