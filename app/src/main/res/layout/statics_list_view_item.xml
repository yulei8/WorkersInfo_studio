<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
                android:id="@+id/feedback"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_below="@id/upgradeLayout"
                android:background="@drawable/common_strip_setting_bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/statics_item_textView1"
                    style="@style/B4_Font_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:duplicateParentState="true"
                    android:gravity="center|left"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:text="55岁以上" />

                <TextView
                     android:id="@+id/statics_item_textView2"
                    style="@style/B4_Font_white"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:duplicateParentState="true"
                    android:gravity="center|right"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:text="0" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    android:duplicateParentState="true"
                    android:src="@drawable/common_arrow_right_selector" />
            </LinearLayout>    
</LinearLayout>